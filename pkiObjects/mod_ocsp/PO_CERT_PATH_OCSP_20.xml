<PKIObjects>
    <Variable name="rootAIA">http://${httpHost}:${httpPort}/CERT_PATH_OCSP_20_ROOT_CA_AIA</Variable>
    <Variable name="subAIA">http://${httpHost}:${httpPort}/CERT_PATH_OCSP_20_SUB_CA_AIA</Variable>
    <Path>CERT_PATH_OCSP_20_ROOT_CA,CERT_PATH_OCSP_20_SUB_CA,CERT_PATH_OCSP_20_EE</Path>
    <Certificate id="CERT_PATH_OCSP_20_ROOT_CA" refid="CERT_PATH_COMMON_01_ROOT_CA" type="TA"/>
    <Certificate id="CERT_PATH_OCSP_20_SUB_CA" refid="CERT_PATH_OCSP_01_SUB_CA">
        <VerifiedBy>CERT_PATH_OCSP_20_ROOT_CA</VerifiedBy>
        <SerialNumber>42120</SerialNumber>
        <Extension oid="1.3.6.1.5.5.7.1.1" critical="false" name="Authority Information Access" type="pretty">${rootAIA}</Extension>
    </Certificate>
    <Certificate id="CERT_PATH_OCSP_20_EE" refid="CERT_PATH_COMMON_01_EE" type="TC">
        <VerifiedBy>CERT_PATH_OCSP_20_SUB_CA</VerifiedBy>
        <SerialNumber>32120</SerialNumber>
        <Extension oid="1.3.6.1.5.5.7.1.1" critical="false" name="Authority Information Access" type="pretty">${subAIA}</Extension>
      </Certificate>

    <Certificate id="CERT_PATH_OCSP_20_OCSPSGN">
        <VerifiedBy>CERT_PATH_OCSP_20_SUB_CA</VerifiedBy>
        <Version>2</Version>
        <SerialNumber>14320</SerialNumber>
        <Signature>1.2.840.113549.1.1.11</Signature>
        <IssuerDN encoding="UTF8">CN=Test Sub CA, C=WR</IssuerDN>
        <SubjectDN encoding="UTF8">CN=OCSP Signer, C=DE</SubjectDN>
        <NotBefore>-8H</NotBefore>
        <NotAfter>+1Y</NotAfter>
        <PublicKey type="pretty">${publicKey}</PublicKey>
        <Extension oid="2.5.29.35" critical="false" name="Authority Key Identifier" type="pretty"></Extension>
        <Extension oid="2.5.29.14" critical="false" name="Subject Key Identifier" type="pretty"></Extension>
        <Extension oid="2.5.29.15" critical="true" name="Key Usage" type="pretty">${extension.ku.value}</Extension>
        <Extension oid="2.5.29.19" critical="true" name="Basic Constraints" type="pretty">false</Extension>
        <!-- extended key usage id-kp-OCSPSigning -->
        <Extension oid="2.5.29.37" critical="false" name="Extended Key Usage" type="pretty">1.3.6.1.5.5.7.3.9</Extension>
    </Certificate>
	  
	<OcspResponse id="CERT_PATH_OCSP_20_SUB_CA_RESP" responseStatus="successful">
        <Location>${rootAIA}</Location>
        <Version>0</Version>
        <VerifiedBy>CERT_PATH_OCSP_20_ROOT_CA</VerifiedBy>
        <Signature>${ocsp.signature}</Signature>
        <ResponderId type="byName"></ResponderId>
        <ProducedAt encoding="GEN">-1S</ProducedAt>
        <ResponseEntry refid="CERT_PATH_OCSP_20_SUB_CA"> 
          <HashAlgorithm>${ocsp.idHash}</HashAlgorithm> 
          <CertStatus>
            <Status>good</Status>
          </CertStatus>
          <ThisUpdate encoding="GEN">-1D</ThisUpdate>
          <NextUpdate encoding="GEN">+6D</NextUpdate>
        </ResponseEntry>
    </OcspResponse>
	
	<OcspResponse id="CERT_PATH_OCSP_20_EE_RESP" responseStatus="successful" ocspCertId="CERT_PATH_OCSP_20_OCSPSGN">
        <Location>${subAIA}</Location>
        <Version>0</Version>
        <VerifiedBy>CERT_PATH_OCSP_20_OCSPSGN</VerifiedBy>
        <Signature>${ocsp.signature}</Signature>
        <ResponderId type="byName"></ResponderId>
        <ProducedAt encoding="GEN">-1S</ProducedAt>
        <ResponseEntry refid="CERT_PATH_OCSP_20_EE"> 
          <HashAlgorithm>${ocsp.idHash}</HashAlgorithm> 
          <CertStatus>
            <Status>good</Status>
          </CertStatus>
          <ThisUpdate encoding="GEN">-1D</ThisUpdate>
          <NextUpdate encoding="GEN">+6D</NextUpdate>
        </ResponseEntry>
    </OcspResponse>
</PKIObjects>


